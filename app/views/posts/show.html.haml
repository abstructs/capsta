.posts-wrapper.row
  .post
    .post-head
      .name
        Ben Walker
    .image.center-block
      =image_tag @post.image.url(:medium)
    %p.caption
      =@post.caption
    .text-center
      =link_to "Cancel", posts_path
      |
      =link_to "Edit", edit_post_path(@post)
      |
      =link_to "Delete", post_path(@post), method: :delete,
      data: { confirm: "Are you sure you want to delete this post?" }
